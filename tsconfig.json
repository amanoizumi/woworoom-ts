{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/scripts/*": ["scripts/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "scripts/**/*",
    "types/**/*",
    "main.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

